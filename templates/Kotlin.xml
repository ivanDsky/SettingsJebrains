<templateSet group="Kotlin">
  <template name="plm" value="$NAME$: ($ARG$) -&gt; $RET$ = $DEF$," description="Variable lambda" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="ARG" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="RET" expression="" defaultValue="&quot;Unit&quot;" alwaysStopAt="true" />
    <variable name="DEF" expression="" defaultValue="&quot;{}&quot;" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN" value="true" />
    </context>
  </template>
  <template name="msf" value="private val _$NAME$ = MutableStateFlow$END$($START_VALUE$)&#10;val $NAME$ = _$NAME$.asStateFlow()" description="Create private MutableStateFlow and public StateFlow" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="START_VALUE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
      <option name="KOTLIN_STATEMENT" value="true" />
    </context>
  </template>
</templateSet>